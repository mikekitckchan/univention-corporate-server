@require "icons.styl"

//// overarching button styling
.dijitButton,
.dijitDropDownButton
	margin: 0
	font-size: var(--button-font-size)
	border-radius: var(--button-border-radius)
	background-color: var(--bgc)
	transition: opacity 250ms

.dijitButtonNode
	border: none
	border-radius: inherit
	display: flex
	align-items: center // mainly for umc/widgets/NumberSpinner arrows
	justify-content: center
	transition: var(--button-bgc-transition)
	background-color: var(--bgc-state)

.dijitButtonContents
	height: 2rem
	display: flex
	align-items: center
	justify-content: center

.dijitButtonText
	color: var(--font-color-contrast-high)
	font-weight: 600
	text-transform: uppercase


//// specific button styling
.dijitDropDownButton .dijitArrowButtonInner
	display: none
.dijitDropDownButton .dijitNoIcon
	@extends .iconMore
	display: block


//// button types
.ucsButton
	--bgc: var(--button-bgc)
	--bgc-state: transparent
	&.dijit
		&Hover,
		&Focused
			--bgc-state: var(--button-bgc-overlay-hover)
		&Active
			--bgc-state: var(--button-bgc-overlay-active)
		&Disabled
			--bgc-state: var(--button-bgc-overlay-disabled)
			opacity: 0.4

.ucsPrimaryButton
	--bgc: var(--button-primary-bgc)
	--bgc-state: transparent
	&.dijit
		&Hover,
		&Focused
			--bgc-state: var(--button-primary-bgc-overlay-hover)
		&Active
			--bgc-state: var(--button-primary-bgc-overlay-active)
		&Disabled
			--bgc-state: var(--button-primary-bgc-overlay-disabled)
			opacity: 0.4

.ucsTextButton
	--bgc: var(--button-text-bgc)
	--bgc-state: transparent
	&.dijit
		&Hover,
		&Focused
			--bgc-state: var(--button-text-bgc-overlay-hover)
		&Active
			--bgc-state: var(--button-text-bgc-overlay-active)
		&Disabled
			--bgc-state: transparent
			opacity: 0.4

	.dijitButtonContents
		padding: 0 0.5rem

.ucsPrimaryButton,
.ucsButton,
.ucsTextButton
	.dijitIcon
		font-size: var(--font-size-button-icon, 1.2em)
		width: 1em
		height: @width
		margin-right: 0.4em

.ucsPrimaryButton,
.ucsButton
	.dijitButtonContents
		padding: 0 1rem

.ucsIconButton
	--bgc: transparent
	--bgc-state: transparent
	&.dijit
		&Hover,
		&Focused
			--bgc-state: var(--button-icon-bgc-overlay-hover)
		&Active
			--bgc-state: var(--button-icon-bgc-overlay-active)
		&Disabled
			--bgc-state: var(--button-icon-bgc-overlay-disabled)
			opacity: 0.4

	border-radius: var(--border-radius-circles)
	.dijitButtonNode
		border-radius: var(--border-radius-circles)

	.dijitIcon
		font-size: var(--font-size-button-icon, 1.2em)
		height: 1em
		width: @height

	.dijitButtonContents
		width: 2rem
	&Compact .dijitButtonContents
		height: 1rem
		width: 1rem

//// misc
.dijitUploader input
	cursor: pointer


.dijitButton:not(.ucsButton):not(.ucsTextButton):not(.ucsPrimaryButton):not(.ucsIconButton)
	@extends .ucsButton
