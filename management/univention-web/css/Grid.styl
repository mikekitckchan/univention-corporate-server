$umcGrid-edge-padding = 24px
.umc .umcGrid
	background-color: #fff
	material-shadow(1)

	.umcGridHeader
		flex: 0 0 auto
		display: flex
		flex-wrap: wrap
		padding: material-grid(1)

		.dijitButton,
		.dijitDropDownButton
			material-flat-button()

		.dijitButton
			.dijitIcon
				display: none
		.umcIconButton
			.dijitIcon
				display: inline-block

	.umcGrid__contextWrapper
		max-width: 100%
		flex: 1 0 auto
		display: flex
		justify-content: flex-end

	.umcGridStatus
		flex: 0 1 auto
		white-space: nowrap
		overflow: hidden
		text-overflow: ellipsis
		height: 52px
		line-height: @height
		text-align: right
		font-size: 12px
		color: $material-text-dark-medium
		padding-right: material-grid(2)

	.umcGrid__contextActionsToolbar
		flex: 1 0 auto

	.dgrid
		clear: both
		border: none
		border-top: 1px solid #e0e0e0

		.dgrid-cell
			border: none
			vertical-align: middle
			padding: 0
			-webkit-user-select: text
			-moz-user-select: text
			-ms-user-select: text
			user-select: text

			&.dgrid-selector
				box-sizing: content-box
				width: 20px !important
				padding: 0 $umcGrid-edge-padding 0 0
				-webkit-user-select: none
				-moz-user-select: none
				-ms-user-select: none
				user-select: none

				&:after
					content: ''
					display: block
					icon-image(-200, -100)

					^[-3] .dgrid-row.dgrid-selected ^[-3..-1]
						icon-image(-220, -100)

					^[-1].dgrid-allSelected^[-1..-1]
						icon-image(-220, -100)

					^[-1].dgrid-indeterminate^[-1..-1]
						icon-image(-240, -100)

				input
					display: none

			&:first-child
				padding-left: $umcGrid-edge-padding

			&:last-child
				padding-right: $umcGrid-edge-padding

			div img
				float: none !important

			.dgrid-sort-arrow
				float: left

		.dgrid-header
			height: 56px
			line-height: @height
			font-size: 12px
			background-color: inherit
			border-bottom: 1px solid #e0e0e0

			.dgrid-cell
				color: rgba(0, 0, 0, 0.54)

				.dgrid-sort-arrow
					opacity: 0.87
					float: none
					display: inline-block
					vertical-align: text-bottom

				&.dgrid-sort-up,
				&.dgrid-sort-down
					color: rgba(0, 0, 0, 0.87)


				&.dgrid-sort-up .dgrid-sort-arrow
					icon-image(-280, -80)

				&.dgrid-sort-down .dgrid-sort-arrow
					icon-image(-260, -80)

		.dgrid-row-table
			height: material-grid(6)

		.dgrid-row
			color: rgba(0, 0, 0, 0.87)
			box-sizing: content-box
			transition: background-color 0.2s
			border-top: 1px solid #e0e0e0
			&:nth-child(2) /* can't use first-child since the .dgrid-preload element is at first place */
				border-top: none

			&:hover
				background-color: #eeeeee

			&.dgrid-selected
				background-color: #f5f5f5

			// adapt inline buttons
			.dijitButton
				material-flat-button()
				margin-top: 0
				margin-bottom: 0

.umc .umcGrid--filtering
	.dgrid
		max-height: 0px !important


.umcGrid .dgrid-scroller
	max-height: inherit

.umcGrid .dgrid-cell div
	display: inline
	vertical-align: middle

.umcGrid .umcGridDefaultAction:hover
	text-decoration: underline
	cursor: pointer

.umc .umcGridFooter
	display: none

.umc .umcGrid .dgrid-cell
	white-space: nowrap
	overflow: hidden
	text-overflow: ellipsis
