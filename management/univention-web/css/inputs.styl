.dijitComboBox .dijitDownArrowButton
	--bgc: transparent
	width: 2em
	height: @width
	margin-right: 0.5rem
	background: var(--bgc)
	border-radius: 50%
	transition: var(--button-bgc-transition)
	display: flex
	align-items: center

	&Hover
		--bgc: var(--button-icon-bgc-overlay-hover)
	&Active
		--bgc: var(--button-icon-bgc-overlay-active)

	.dijitArrowButtonInner
		width: 1em
		height: 1em !important
		background: url(images/chevron-down_white.svg)
		background-size: contain


